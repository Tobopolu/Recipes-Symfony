{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
    <div class="wrapper">
        <a href="/new" class="btn-add mb-4">Ajouter une recette</a>
        <h1 class="text-uppercase">Les Recettes</h1>
        <ul class="recipe-list">
            {% for recipe in recipes %}
                <li class="recipe-item" style="background-image: url('{{ recipe.image }}');">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="glassmorphism">
                            <a href="{{ path('recipe.show', {'id': recipe.id}) }}" class="recipe-tt">{{ recipe.title }}</a>
                            <p class="description">{{ recipe.recipe | slice(0, 100) ~ '...' }}</p>
                        </div>
                        <a href="{{ path('recipe_delete', {'id': recipe.id}) }}" class="btn btn-danger btn-supp">Supprimer</a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
